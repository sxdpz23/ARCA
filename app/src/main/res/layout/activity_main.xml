<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/mob17"
        android:id="@+id/signup_back">
    <ImageView
            android:layout_width="140dp"
            android:layout_height="104dp" app:srcCompat="@drawable/icon"
            android:id="@+id/register_icon"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"/>
    <Button
            android:text="Ingredients"
            android:layout_width="132dp"
            android:layout_height="60dp"
            android:id="@+id/main_ingredient"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:drawable/screen_background_light_transparent"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:textSize="18sp"
            android:fontFamily="@font/alegreya" android:textAlignment="center" android:textStyle="italic"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginEnd="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/main_recipe"/>
    <Button
            android:text="Recipes"
            android:layout_width="132dp"
            android:layout_height="60dp"
            android:id="@+id/main_recipe"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:fontFamily="@font/alegreya" android:textSize="18sp" android:textAlignment="center"
            android:textStyle="italic" android:background="@android:drawable/screen_background_light_transparent"
            app:layout_constraintBottom_toTopOf="@+id/log_cred"
            style="@style/Widget.AppCompat.Button.Borderless" android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="280dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/register_icon"/>
    <Button
            android:text="@string/still_pending" android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/log_cred" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="15dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="15dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:fontFamily="@font/alegreya" android:textSize="24sp"
            android:textColor="@color/design_default_color_primary_dark" android:textStyle="bold|italic"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>