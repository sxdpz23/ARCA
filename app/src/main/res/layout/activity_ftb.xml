<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FTBActivity">
    <android.support.design.widget.BottomNavigationView
            android:layout_width="395dp"
            android:layout_height="438dp"
            android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"
            android:id="@+id/ftb_carousal"
            app:layout_constraintTop_toBottomOf="@+id/ftb_head"/>
    <TextView
            android:text="WELCOME\nto\nARCA"
            android:layout_width="191dp"
            android:layout_height="126dp"
            android:id="@+id/ftb_head" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" android:fontFamily="@font/alegreya" android:typeface="normal"
            android:textSize="30sp" android:textStyle="bold" android:textAlignment="center"
    />
    <Button
            android:text="@string/next"
            android:layout_width="178dp"
            android:layout_height="55dp" android:id="@+id/ftb_next"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ftb_carousal" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textSize="18sp" android:fontFamily="sans-serif"
            android:typeface="normal" style="@android:style/Widget.Material.Button.Borderless.Colored"/>

</android.support.constraint.ConstraintLayout>