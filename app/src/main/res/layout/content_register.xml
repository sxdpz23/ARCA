<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_register"
        tools:context=".RegisterActivity" android:background="@drawable/mob4"
        android:id="@+id/signup_back">

        <Button
                android:text="@string/action_signup"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:id="@+id/register_em" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="50dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
                style="@android:style/Widget.Holo.Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="18sp" android:textAlignment="center" android:textStyle="italic"
                android:fontFamily="@font/alegreya" android:textColor="@android:color/holo_orange_dark"
                android:lineSpacingExtra="8sp" android:typeface="normal" android:background="@android:color/black"/>
        <Button
                android:text="@string/action_signup_g"
                android:id="@+id/register_g" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginBottom="80dp" app:layout_constraintBottom_toTopOf="@+id/register_em"
                android:layout_height="56dp"
                style="@android:style/Widget.Holo.Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="18sp" android:textAlignment="center" android:textStyle="italic"
                android:fontFamily="@font/alegreya" android:textColor="@android:color/holo_blue_dark"
                android:lineSpacingExtra="8sp" android:typeface="normal" android:background="@android:color/black"/>
        <Button
                android:text="@string/action_signup_fb"
                android:id="@+id/register_fb" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/register_g"
                android:layout_height="56dp"
                style="@android:style/Widget.Holo.Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="18sp" android:textAlignment="center" android:textStyle="italic"
                android:fontFamily="@font/alegreya" android:textColor="@android:color/holo_blue_dark"
                android:lineSpacingExtra="8sp" android:typeface="normal" android:background="@android:color/black"
                android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/register_icon"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/icon_dark"
                android:id="@+id/register_icon" android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="50dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="50dp"/>
        <ImageView
                android:layout_width="43dp"
                android:layout_height="35dp" app:srcCompat="@drawable/fbico"
                android:id="@+id/fbico"
                app:layout_constraintTop_toTopOf="@+id/register_fb" app:layout_constraintStart_toStartOf="@+id/register_fb"
                app:layout_constraintBottom_toBottomOf="@+id/register_fb" app:layout_constraintEnd_toEndOf="@+id/register_fb"
                android:layout_marginEnd="250dp" android:layout_marginStart="10dp" android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" android:background="@android:drawable/screen_background_dark"/>
        <ImageView
                android:layout_width="43dp"
                android:layout_height="35dp" app:srcCompat="@drawable/gico"
                android:id="@+id/gico"
                app:layout_constraintTop_toTopOf="@+id/register_g" app:layout_constraintEnd_toEndOf="@+id/register_g"
                app:layout_constraintBottom_toBottomOf="@+id/register_g"
                app:layout_constraintStart_toStartOf="@+id/register_g" android:layout_marginEnd="250dp"
                android:layout_marginTop="10dp" android:layout_marginStart="10dp" android:layout_marginBottom="10dp"/>

</android.support.constraint.ConstraintLayout>